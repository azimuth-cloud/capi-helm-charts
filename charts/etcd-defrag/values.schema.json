    "schedule",
    "startingDeadlineSeconds",
    "backoffLimit",
    "activeDeadlineSeconds",
    "image",
    "imagePullSecrets",
    "podSecurityContext",
    "securityContext",
    "resources",
    "nodeSelector",
    "tolerations",
    "affinity"
  ],
  "type": "object"
}